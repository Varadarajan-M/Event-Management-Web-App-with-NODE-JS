<%- include('partials/Admin-Header') %>

<div id="sendmessage">

    <form action="/sendmessage" method="POST">
    
        <h2>Inform Corrections</h2>
        <p> Please mention the fieldnames that needs to be corrected clearly! </p>
    
        <div class="mt-3 form-group">
            <label for="username">Username</label>
            <p name="username"><%=username%></p>
        </div>
        
        <div class="form-group">
            <label for="eventname">Event Name</label>
            <p name="eventname"><%=eventname%></p>
        </div>

        <div class="form-group">
            <label for="message">Message</label>
            <textarea class="form-control" name="message" id="message" placeholder="Mention corrections clearly" rows="3"></textarea>
        </div>
    
        <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i>&nbsp Send Message</button>

    </form>

</div>

<%- include('partials/Admin-Footer') %>